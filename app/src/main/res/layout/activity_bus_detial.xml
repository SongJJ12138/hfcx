<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_15"
            android:background="@color/black_text"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="北京-唐山"
            android:textColor="@color/black_text"
            android:textSize="18sp"/>
    </RelativeLayout>
    <ScrollView
       android:layout_width="match_parent"
       android:layout_height="0dp"
        android:layout_weight="1">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_180"
               android:background="@drawable/background"
               android:orientation="vertical">
               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="@dimen/dp_10"
                   card:cardCornerRadius="4dp"
                   card:cardElevation="10dp"
                   card:cardMaxElevation="10dp">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <TextView
                           android:id="@+id/tv_busdetilis_time"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="13:30"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_20"
                           android:textStyle="bold"
                           android:layout_marginTop="@dimen/dp_49"
                           android:layout_marginLeft="@dimen/dp_16"/>
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_toRightOf="@id/tv_busdetilis_time"
                           android:layout_marginTop="@dimen/dp_15"
                           android:layout_marginLeft="@dimen/dp_30">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="北京站"
                               android:textColor="#ff333333"
                               android:textStyle="bold"
                               android:textSize="@dimen/sp_20"/>
                           <TextView
                               android:id="@+id/bt_allstation"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:paddingTop="@dimen/dp_10"
                               android:paddingBottom="@dimen/dp_10"
                               android:text="查看途径站点"
                               android:textColor="#ff005efe"
                               android:textSize="12sp"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="天津汽车站"
                               android:textColor="#ff333333"
                               android:textSize="@dimen/sp_18"/>
                       </LinearLayout>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"
                           android:text="￥108"
                           android:textColor="#fffd4c4c"
                           android:textStyle="bold"
                           android:textSize="@dimen/sp_20"
                           android:layout_marginRight="@dimen/dp_16"
                           android:layout_marginTop="@dimen/dp_38"/>
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingBottom="@dimen/dp_10"
                           android:orientation="horizontal"
                           android:layout_alignParentBottom="true">
                           <ImageView
                               android:layout_width="@dimen/dp_10"
                               android:layout_height="10dp"
                               android:layout_marginLeft="@dimen/dp_15"
                               android:layout_gravity="center"
                               android:background="@color/black_text"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/dp_5"
                               android:text="预计1~2小时"
                               android:textColor="#ff005efe"
                               android:textSize="@dimen/sp_10"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/dp_5"
                               android:background="#300057EC"
                               android:padding="@dimen/dp_2"
                               android:text="空调车"
                               android:textColor="#ff005efe"
                               android:textSize="@dimen/sp_10"/>
                       </LinearLayout>
                   </RelativeLayout>
               </android.support.v7.widget.CardView>
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_20"
               android:text="上下站点添加"
               android:textColor="#ff333333"
               android:textStyle="bold"
               android:textSize="@dimen/sp_15"/>
           <android.support.v7.widget.CardView
               android:id="@+id/bt_up"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_80"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_10"
               card:cardCornerRadius="4dp"
               card:cardElevation="10dp"
               card:cardMaxElevation="10dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <LinearLayout
                       android:id="@+id/up_station"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:orientation="horizontal">
                       <View
                           android:layout_width="8dp"
                           android:layout_height="8dp"
                           android:layout_gravity="center"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:background="@drawable/circle_blue"/>
                       <TextView
                           android:id="@+id/tv_upstation"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="请输入上车站点"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:layout_gravity="center"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_15"/>
                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/down_station"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="1"
                       android:orientation="horizontal">
                       <View
                           android:layout_width="8dp"
                           android:layout_height="8dp"
                           android:layout_gravity="center"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:background="@drawable/circle_red"/>
                       <TextView
                           android:id="@+id/tv_downstation"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="请输入下车站点"
                           android:layout_marginLeft="@dimen/dp_10"
                           android:layout_gravity="center"
                           android:textColor="#ff333333"
                           android:textSize="@dimen/sp_15"/>
                   </LinearLayout>
               </LinearLayout>

           </android.support.v7.widget.CardView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_20"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="乘客信息"
                   android:textColor="#ff333333"
                   android:textStyle="bold"
                   android:textSize="@dimen/sp_15"/>
               <View
                   android:layout_width="0dp"
                   android:layout_height="1dp"
                   android:layout_weight="1"/>
               <TextView
                   android:id="@+id/bt_addPeople"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:padding="@dimen/dp_10"
                   android:textStyle="bold"
                   android:text="添加"
                   android:textColor="#ff0057ec"
                   android:textSize="@dimen/sp_12"/>
           </LinearLayout>
           <TextView
               android:id="@+id/tv_people_toast"
               android:layout_margin="@dimen/dp_10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="请添加乘客信息"
               android:textColor="#ff333333"
               android:textSize="@dimen/sp_15"
               android:gravity="center"/>
           <android.support.v7.widget.RecyclerView
               android:id="@+id/rv_people"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_20"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_20"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="接送到家"
                   android:textColor="#ff333333"
                   android:textStyle="bold"
                   android:textSize="@dimen/sp_15"/>
               <ImageView
                   android:layout_width="@dimen/dp_15"
                   android:layout_height="@dimen/dp_15"
                   android:layout_gravity="center"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:background="@color/black_text" />
               <View
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="1dp"/>
               <CheckBox
                   android:id="@+id/check_jie"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="接"
                   android:textColor="#ff333333"
                   android:textSize="@dimen/sp_15"
                   android:textStyle="bold"/>
               <CheckBox
                   android:id="@+id/check_song"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="@dimen/dp_10"
                   android:text="送"
                   android:textColor="#ff333333"
                   android:textSize="@dimen/sp_15"
                   android:textStyle="bold"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/layout_jie"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:orientation="horizontal">
               <View
                   android:layout_width="8dp"
                   android:layout_height="8dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:background="@drawable/circle_blue"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="去"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_gravity="center"
                   android:textColor="@color/gray"
                   android:textSize="@dimen/sp_15"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="人民公园"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_gravity="center"
                   android:textColor="@color/bluediss"
                   android:textSize="@dimen/sp_15"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="接"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_gravity="center"
                   android:textColor="@color/gray"
                   android:textSize="@dimen/sp_15"/>
               <View
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="1dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:layout_marginRight="@dimen/dp_10"
                   android:text="￥20.0"
                   android:textColor="#fffd4c4c"
                   android:textSize="@dimen/sp_13"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/layout_song"
               android:visibility="gone"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_40"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:orientation="horizontal">
               <View
                   android:layout_width="8dp"
                   android:layout_height="8dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:background="@drawable/circle_blue"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="送"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_gravity="center"
                   android:textColor="@color/gray"
                   android:textSize="@dimen/sp_15"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="人民公园"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_gravity="center"
                   android:textColor="@color/bluediss"
                   android:textSize="@dimen/sp_15"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="去"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_gravity="center"
                   android:textColor="@color/gray"
                   android:textSize="@dimen/sp_15"/>
               <View
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="1dp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:layout_marginRight="@dimen/dp_10"
                   android:text="￥20.0"
                   android:textColor="#fffd4c4c"
                   android:textSize="@dimen/sp_13"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/layout_price"
               android:visibility="gone"
               android:layout_marginTop="@dimen/dp_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginRight="@dimen/dp_10"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="共计:  "
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_gravity="center"
                   android:textColor="@color/gray"
                   android:textSize="@dimen/sp_15"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:textStyle="bold"
                   android:layout_marginRight="@dimen/dp_10"
                   android:text="￥20.0"
                   android:textColor="#fffd4c4c"
                   android:textSize="@dimen/sp_13"/>
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请你仔细阅读"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_10"/>
        <TextView
            android:id="@+id/bus_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bluediss"
            android:textSize="@dimen/sp_10"
            android:text="《汽车票购买协议》"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_10"
            android:text="和"/>
        <TextView
            android:id="@+id/bus_guize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bluediss"
            android:textSize="@dimen/sp_10"
            android:text="《票价规则》"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总额"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥148.00"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            android:layout_toRightOf="@id/a"
            android:layout_alignBaseline="@id/a"
            android:layout_marginLeft="@dimen/dp_7" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="含接送到家￥40"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_10"
            android:layout_below="@id/a"
            android:layout_marginLeft="@dimen/dp_15"/>
        <TextView
            android:id="@+id/bt_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bt_red"
            android:text="确认付款"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>
</LinearLayout>