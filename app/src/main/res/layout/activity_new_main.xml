<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_207">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"/>

        <ImageView
            android:id="@+id/bt_mine"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_gravity="top|left"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_26"
            android:background="@color/black_text"
            android:padding="@dimen/dp_5" />
        <ImageView
            android:id="@+id/bt_notice"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_18"
            android:padding="@dimen/dp_5"
            android:background="@color/black_text"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_26"/>
        <TextView
            android:layout_marginTop="@dimen/dp_88"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您好，欢迎来到合风出行。"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020年7月1日"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_130"/>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="-40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/bt_order"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_200"
            card:cardCornerRadius="4dp"
            card:cardElevation="10dp"
            card:cardMaxElevation="10dp">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <ImageView
                   android:id="@+id/image_a"
                   android:layout_width="@dimen/dp_50"
                   android:layout_height="@dimen/dp_50"
                   android:background="@color/black_text"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="@dimen/dp_33"/>
               <TextView
                   android:id="@+id/text_a"
                   android:layout_below="@id/image_a"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="@dimen/dp_32"
                   android:text="定制出行"
                   android:textStyle="bold"
                   android:textColor="#ff333333"
                   android:textSize="@dimen/sp_15" />
               <TextView
                   android:layout_below="@+id/text_a"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="@dimen/dp_20"
                   android:text="省时 方便 快捷"
                   android:textColor="#ff999999"
                   android:textSize="13sp" />
               <ImageView
                   android:layout_width="@dimen/dp_20"
                   android:layout_height="@dimen/dp_5"
                   android:background="#0DCBA3"
                   android:layout_alignParentBottom="true"
                   android:layout_centerHorizontal="true"/>
           </RelativeLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp" />
        <android.support.v7.widget.CardView
            android:id="@+id/bt_taxi"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_weight="1"
            card:cardCornerRadius="4dp"
            card:cardElevation="10dp"
            card:cardMaxElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_b"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/black_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_33"/>
                <TextView
                    android:id="@+id/text_b"
                    android:layout_below="@id/image_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="包车"
                    android:textStyle="bold"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_below="@+id/text_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="省时 方便 快捷"
                    android:textColor="#ff999999"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_5"
                    android:background="#8076FF"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:id="@+id/bt_wuliu"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_200"
            card:cardCornerRadius="4dp"
            card:cardElevation="10dp"
            card:cardMaxElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_c"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/black_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_33"/>
                <TextView
                    android:id="@+id/text_c"
                    android:layout_below="@id/image_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="特色物流"
                    android:textStyle="bold"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_below="@+id/text_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="省时 方便 快捷"
                    android:textColor="#FF9A00"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_5"
                    android:background="#0DCBA3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <View
            android:layout_width="15dp"
            android:layout_height="1dp"/>
        <android.support.v7.widget.CardView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_200"
            android:layout_marginRight="@dimen/dp_20"
            card:cardCornerRadius="4dp"
            card:cardElevation="10dp"
            card:cardMaxElevation="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_d"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@color/black_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_33"/>
                <TextView
                    android:id="@+id/text_d"
                    android:layout_below="@id/image_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_32"
                    android:text="特色物流"
                    android:textStyle="bold"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_15" />
                <TextView
                    android:layout_below="@+id/text_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="省时 方便 快捷"
                    android:textColor="#FF9A00"
                    android:textSize="13sp" />
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_5"
                    android:background="#0DCBA3"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_28"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/bt_shouye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_19"
                android:background="@color/black_text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_gravity="center"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:text="首页"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/bt_kefu"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:background="@color/black_text"/>
        <LinearLayout
            android:id="@+id/bt_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_19"
                android:background="@color/black_text" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_gravity="center"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                android:text="订单"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>