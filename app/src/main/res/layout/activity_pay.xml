<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_15"
            android:background="@color/black_text"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:text="订单支付"
            android:textColor="@color/black_text"
            android:textSize="18sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_155"
        android:background="@color/bluediss">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/a"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:background="@color/black" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29分59秒后取消订单"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15"/>
        </LinearLayout>
        <TextView
            android:id="@+id/jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分优惠：¥10"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_below="@id/jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应支付：¥10"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="-50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="产品详情"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="北京-唐山长途客运西站"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_80"
                android:text="(天津站上车)"
                android:textColor="#ff005efe"
                android:textSize="@dimen/sp_12"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="出发时间"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="2020-7-12 13:30"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_peoplesize"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="乘车人数"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_15"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="2人"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        card:cardCornerRadius="4dp"
        card:cardElevation="10dp"
        card:cardMaxElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">
            <TextView
                android:id="@+id/h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆信息"
                android:textColor="#ff333333"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_carCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/h"
                android:text="冀B123123"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_carType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_carCard"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_below="@id/h"
                android:text="7座别克"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/tv_carDrivrer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_carCard"
                android:text="张一二"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_10"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10">
                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_gravity="center"
                    android:background="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="打电话"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_10"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        card:cardCornerRadius="4dp"
        card:cardElevation="10dp"
        card:cardMaxElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">
            <TextView
                android:id="@+id/i"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唐山交通运输集团"
                android:textColor="#ff333333"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:id="@+id/tv_companyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/i"
                android:text="公司地址：车站路134号"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_10"/>
            <TextView
                android:id="@+id/tv_company_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_companyAddress"
                android:text="营业时间：08:00-18:00"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:text="联系公司"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">
            <ImageView
                android:id="@+id/f"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@color/black"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@id/f"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即签约"
                android:textColor="#ff333333"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"/>
            <ImageView
                android:id="@+id/g"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/black"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toLeftOf="@id/g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="未签约"
                android:textColor="#ffcccccc"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20">
        <include
            android:id="@+id/layout_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_pay"
            android:layout_marginTop="10dp"/>
    </android.support.v7.widget.CardView>

</LinearLayout>