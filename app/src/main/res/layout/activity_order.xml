<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sp_15"
            android:background="@color/black_text"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/order_tab"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_40"
            app:tabIndicatorHeight="@dimen/dp_3"
            app:tabTextColor="@color/gray"
            app:tabSelectedTextColor="@color/black_text"
            app:tabIndicatorColor="#005EFE">
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:text="班线订制"
                android:layout_height="wrap_content"/>
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:text="私人订制"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TabLayout>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/order_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>